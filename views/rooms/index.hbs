{{#grouped_each 3 rooms}}
    <div class="row">
        {{#each this }}
            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="panel-title"><h4>{{name}}</h4></div>
                    </div>
                    <div class="panel-body">
                        <p>Collaboratively administrate empowered markets via plug-and-play networks. Dynamically procrastinate B2C users after installed base benefits.</p>
                    </div>
                    <div class="panel-footer footer-red">
                        <ul class="justified-list">
                            <li><i class="ion-android-favorite-outline"></i></li>
                            <li><i class="ion-android-radio-button-off"></i></li>
                            <li><i class="ion-android-checkbox-outline-blank"></i></li>
                        </ul>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/grouped_each}}
