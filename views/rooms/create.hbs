<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <div class="panel-title"><h4>ROOM DETAILS</h4></div>
            </div>
            <div class="panel-body">

                <form action="/rooms/create" method="post" class="form-horizontal">
                    <div class="form-content">

                        <div class="form-group">
                            <label class="control-label col-md-3" for="name">Room Name</label>
                            <div class="col-md-8">
                                <div class="inputer">
                                    <div class="input-wrapper">
                                        <input type="text" id="name" name="name" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="channel">Channel</label>
                            <div class="col-md-8">
                                <div class="inputer">
                                    <div class="input-wrapper">
                                        <input type="text" id="channel" name="channel" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="form-buttons">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-blue">Submit</button>
                                <button type="button" class="btn btn-flat btn-default">Cancel</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>